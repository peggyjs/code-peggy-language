{
    "fileTypes": [
        "peggy"
    ],
    "name": "Peggy File",
    "patterns": [
        {
            "include": "#comment"
        },
        {
            "include": "#label"
        },
        {
            "include": "#defRule"
        },
        {
            "include": "#rule"
        },
        {
            "include": "#literal"
        },
        {
            "include": "#charclass"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#inlinejs"
        }
    ],
    "repository": {
        "comment": {
            "patterns": [
                {
                    "begin": "/\\*",
                    "end": "\\*/",
                    "name": "comment.block.peggy"
                },
                {
                    "match": "//.*$\\n?",
                    "name": "comment.line.double-slash.peggy"
                }
            ]
        },
        "label": {
            "match": "(\\w+)\\s*(?=:)",
            "captures": {
                "1": {
                    "name": "entity.other.attribute-name.attribute.peggy"
                }
            }
        },
        "rule": {
            "match": "[a-zA-Z_][a-zA-Z_0-9$]*",
            "name": "entity.name.function.peggy"
        },
        "literal": {
            "patterns": [
                {
                    "begin": "\"",
                    "end": "\"",
                    "name": "string.quoted.double.peggy",
                    "patterns": [
                        {
                            "match": "\\\\(x\\h{2}|[0-2][0-7]{0,2}|3[0-6][0-7]|37[0-7]?|[4-7][0-7]?|.)",
                            "name": "constant.character.escape.peggy"
                        },
                        {
                            "match": "[^\"]*[^\\n\\r\"\\\\]$",
                            "name": "invalid.illegal.string.peggy"
                        }
                    ]
                },
                {
                    "begin": "'",
                    "end": "'",
                    "name": "string.quoted.single.peggy",
                    "patterns": [
                        {
                            "match": "\\\\(x\\h{2}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)",
                            "name": "constant.character.escape.peggy"
                        },
                        {
                            "match": "[^']*[^\\n\\r'\\\\]$",
                            "name": "invalid.illegal.string.peggy"
                        }
                    ]
                }
            ]
        },
        "charclass": {
            "begin": "\\[",
            "end": "\\]",
            "name": "string.regexp.peggy",
            "patterns": [
                {
                    "match": "\\\\.",
                    "name": "constant.character.escape.peggy"
                }
            ]
        },
        "defRule": {
            "match": "(\\w+)\\s*(?=\\=)",
            "captures": {
                "1": {
                    "name": "entity.name.function.peggy"
                }
            }
        },
        "operators": {
            "match": "[*?/.!=+&@]",
            "name": "keyword.operator.peggy"
        },
        "inlinejs": {
            "begin": "{",
            "end": "}",
            "name": "meta.embedded.block.javascript",
            "patterns": [
                {
                    "include": "source.js"
                }
            ]
        }
    },
    "scopeName": "source.peggy"
}
